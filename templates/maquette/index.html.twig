{# MESSAGE FLASH #}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="fixed top-4 left-[42%] p-10 rounded shadow transition-opacity duration-500 border
                        {% if label == 'success' %} bg-green-100 text-green-800 border-green-800
                        {% elseif label == 'error' %} bg-red-100 text-red-800 border-red-800{% endif %}"
             data-controller="flash-message">
            {{ message|nl2br }}
        </div>
    {% endfor %}
{% endfor %}

